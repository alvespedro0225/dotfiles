[
  {
    "bindings": {
      "alt-1": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == insert || vim_mode == visual)",
    "bindings": {
      "ctrl-c": "editor::Copy",
      "ctrl-x": "editor::Cut",
      "ctrl-v": "editor::Paste"
    }
  },
  {
    "context": "Editor && (showing_completions)",
    "bindings": {
      "up": "editor::MoveUp",
      "down": "editor::MoveDown"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-k": "editor::Hover",
      "ctrl-w": "pane::CloseActiveItem",
      "alt-h": "pane::ActivatePreviousItem",
      "alt-l": "pane::ActivateNextItem",
      "alt-left": "pane::ActivatePreviousItem",
      "alt-right": "pane::ActivateNextItem",
      "space": null,
      "ctrl-alt-o": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "up": null,
      "left": null,
      "right": null,
      "down": null,
      "space /": "buffer_search::Deploy"
    }
  },
  {
    "context": "BufferSearchBar",
    "bindings": {
      "pageup": "search::SelectPreviousMatch",
      "pagedown": "search::SelectNextMatch"
    }
  }
]
