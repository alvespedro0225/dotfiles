// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Pane",
    "bindings": {
      "shift-alt-h": "workspace::ActivatePreviousPane",
      "shift-alt-left": "workspace::ActivatePreviousPane",
      "shift-alt-l": "workspace::ActivateNextPane",
      "shift-alt-right": "workspace::ActivateNextPane"
    }
  },
  {
    "context": "Workspace && !Editor",
    "bindings": {
      "\\": "workspace::ToggleLeftDock",
      "space space": "command_palette::Toggle",
      "space s f": "file_finder::Toggle"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-6": "workspace::ToggleBottomDock",
      "ctrl-n": null,
      "ctrl-p": null,
      "alt-h": "pane::ActivatePreviousItem",
      "alt-left": "pane::ActivatePreviousItem",
      "alt-l": "pane::ActivateNextItem",
      "alt-right": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == insert || vim_mode == visual)",
    "bindings": {
      "ctrl-c": "editor::Copy",
      "ctrl-x": "editor::Cut",
      "ctrl-v": "editor::Paste"
    }
  },
  {
    "context": "BufferSearchBar",
    "bindings": {
      "ctrl-n": "search::SelectNextMatch",
      "ctrl-p": "search::SelectPreviousMatch"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "\\": "workspace::ToggleLeftDock",
      "r": "project_panel::Rename",
      "d": "project_panel::Delete",
      "a": "project_panel::NewFile"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-:": "editor::ToggleInlayHints",
      "ctrl-k": "editor::Hover",
      "space space": "command_palette::Toggle",
      "g r a": "editor::ToggleCodeActions",
      "g r n ": "editor::Rename",
      "g r d": "editor::GoToDefinition",
      "g r r": "editor::FindAllReferences",
      "space s f": "file_finder::Toggle",
      "space g": "project_symbols::Toggle",
      "ctrl-w": "pane::CloseActiveItem",
      "ctrl-b": "editor::ToggleBreakpoint",
      "\\": "vim::ToggleProjectPanelFocus",
      "up": null,
      "down": null,
      "left": null,
      "right": null,
      "@ @": "vim::ReplayLastRecording",
      "ctrl-6": "workspace::ToggleBottomDock",
      "s a": "vim::PushAddSurrounds",
      "s s": "vim::Substitute"
    }
  },
  {
    "context": "Editor && vim_mode == insert && showing_completions",
    "bindings": {
      "ctrl-y": "editor::ConfirmCompletionReplace",
      "ctrl-h": "editor::ConfirmCompletionInsert",
      "enter": null
    }
  },
  {
    "context": "Editor && showing_code_actions",
    "bindings": {
      "ctrl-y": "editor::ConfirmCodeAction",
      "enter": null
    }
  }
]
