    // {
    //   "code_action": "source.fixAll.ruff"
    // }
    // {
    //   "language_server": {
    //     "name": "ruff"
    //   }
    // }
    // ]
    // },
    "CSS": {
      "language_servers": ["eslint", "vscode-css-language-server"]
    },
    "C": {
      "format_on_save": "on"
    }
  },
  "unnecessary_code_fade": 0.4,
  "inlay_hints": {
    "enabled": true
  },
  "hover_popover_enabled": false,
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "errors",
    "activate_on_close": "left_neighbour",
    "show_close_button": "hidden"
  },
  "ui_font_features": {
    "calt": false
  },
  "buffer_font_features": {
    "calt": false
  },
  "journal": {
    "path": "~/code",
    "hour_format": "hour24"
  }
}
